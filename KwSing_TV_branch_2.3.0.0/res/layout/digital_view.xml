            android:background="@drawable/rect_digital_selector"
            android:textColor="@android:color/white"
            android:text="4"
            android:textSize="@dimen/digital_item_text"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
	
        <Button 
            android:id="@+id/btDigitalViewThree"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_digital_selector"
            android:textColor="@android:color/white"
            android:text="3"
            android:textSize="@dimen/digital_item_text"
            />
        <Button 
            android:id="@+id/btDigitalViewTwo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_digital_selector"
            android:textColor="@android:color/white"
            android:text="2"
            android:textSize="@dimen/digital_item_text"
            />
        <Button 
            android:id="@+id/btDigitalViewOne"
            android:layout_width="80dp"
