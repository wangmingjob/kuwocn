            android:id="@+id/btDigitalViewSeven"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_digital_selector"
            android:textColor="@android:color/white"
            android:text="7"
            android:textSize="@dimen/digital_item_text"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
	
        <Button 
            android:id="@+id/btDigitalViewSix"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_digital_selector"
            android:textColor="@android:color/white"
            android:text="6"
            android:textSize="@dimen/digital_item_text"
            />
        <Button 
            android:id="@+id/btDigitalViewFive"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_digital_selector"
            android:textColor="@android:color/white"
            android:text="5"
            android:textSize="@dimen/digital_item_text"
            />
