            android:id="@+id/btDigitalViewEight"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_digital_selector"
            android:textColor="@android:color/white"
            android:text="8"
            android:textSize="@dimen/digital_item_text"
            />
